<div class="arrange" >
<%= render 'shared/content_title', title: 'Add something to your bucket list!' %>

<%= form_for @goal do |f| %>
   <div class='control-group'>
     <%= f.label :goal %>
     <br />
     <%= f.text_area :body, rows: 10 %>
   </div>
   <br />
    <%= f.submit "Create goal", class: 'btn btn-success btn-small' %>
<% end %>

</div>