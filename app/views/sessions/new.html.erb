<% if !logged_in? %>

<div class="welcome frontpage">

  <h2>Log In:</h2>

  <%= form_tag '/login', method: 'post' do %>
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username] %>
    <br />
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br />
    <%= submit_tag "Login", class: "btn btn-primary" %>
  <% end %>

</div>

<% end %>

